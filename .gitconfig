[user]
	name  = Adam Cooper
	email = adam@adamcooper.sh
	signingKey = 22F76ED85C31FEE5
[credential]
	helper = cache
[alias]
	co = checkout
	b  = branch
	ci = commit
    st = status
    d  = diff
    l  = log --pretty --show-signature
    amend = commit --amend --date=now
    update-submodules = submodule foreach git pull 
    fuzz = !$HOME/dev/scripts/git-fuzz
	restore = !$HOME/dev/scripts/git-fuzz r
    current-branch = !$HOME/dev/scripts/git-current-branch.bash
	aliases = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
[core]
	pager = delta --dark
	excludesfile = ~/.gitignore-global
[color]
	ui = true
[commit]
	gpgsign = true
[branch]
	autoSetupMerge = always
	autoSetupRebase = always
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
