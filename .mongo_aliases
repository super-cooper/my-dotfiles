# environment
export KRB5_KDC_PROFILE=$HOME/dev/mongodb/config/kerberos/krb5-kdc/kdc.conf
export KRB5_CONFIG=$HOME/dev/mongodb/config/kerberos/krb5-kdc/krb5.conf
export KRB5_KTNAME=$HOME/dev/mongodb/config/kerberos/krb5-kdc/mongodb.keytab
export KRB5_TRACE=/dev/stdout
export KRB5_CLIENT_KTNAME=$HOME/dev/mongodb/config/kerberos/krb5-kdc/client-mongodb.keytab
export PATH=$PATH:$HOME/dev/mongodb/mongo/build/install/bin

# aliases
alias fdfind=fd
alias resmoke='/home/adam/.virtualenvs/mongo/bin/python3 $HOME/dev/mongodb/mongo/buildscripts/resmoke.py'
mounthost() {
    mkdir "/home/adam/mongodb/spawnhost/$2"
    sudo sshfs -o allow_other,default_permissions,IdentityFile=/home/adam/.ssh/id_rsa "$1":/ "/home/adam/mongodb/spawnhost/$2"
}

NINJA_STATUS='[%f/%t (%p) %es] '
